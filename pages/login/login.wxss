/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #00BFA5 0%, #00897B 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 60rpx;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 100rpx;
  left: -80rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 40%;
  right: -50rpx;
}

/* 顶部区域 */
.header {
  padding-top: 120rpx;
  text-align: center;
  z-index: 1;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 80rpx;
  background: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.logo {
  width: 120rpx;
  height: 120rpx;
}

.logo-emoji {
  font-size: 100rpx;
  line-height: 160rpx;
}

.app-name {
  display: block;
  margin-top: 40rpx;
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  letter-spacing: 4rpx;
}

.app-slogan {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 1;
  padding: 80rpx 0;
}

/* 功能卡片 */
.feature-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
}

.feature-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 40rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  padding: 0;
  margin: 0;
  overflow: visible;
  position: relative;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}

.btn-text {
  font-size: 32rpx;
  color: #00BFA5;
  font-weight: bold;
}

/* 协议条款 */
.agreement {
  text-align: center;
  margin-top: 48rpx;
  line-height: 48rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.agreement-link {
  font-size: 24rpx;
  color: white;
  text-decoration: underline;
  padding: 0 8rpx;
}

/* 底部提示 */
.footer {
  text-align: center;
  padding: 40rpx 0;
  z-index: 1;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
