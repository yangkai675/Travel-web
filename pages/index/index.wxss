.container {
  padding: 0;
  background-color: #f8f9fa;
}

.hero {
  height: 200rpx;
  position: relative;
  overflow: hidden;
  background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/images/travel-bg.jpg') no-repeat center center;
  background-size: cover;
  text-align: center;
  color: white;
  padding-top: 60rpx;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  z-index: 1;
  position: relative;
}

.form-container {
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #212121;
  margin-bottom: 16rpx;
}

.picker {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.input {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.slider-container {
  padding: 20rpx 0;
}

.textarea {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 32rpx;
  min-height: 150rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.generate-btn {
  width: 80%;
  margin: 60rpx auto 0;
  background: linear-gradient(to right, #00bfa5, #009688);
  color: white;
  border-radius: 24rpx;
  font-size: 34rpx;
  font-weight: bold;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.15);
  transition: transform 0.2s;
}

.generate-btn:active {
  transform: scale(0.98);
}